{
    "name": "plan2net/typo3-update-check",
    "description": "A Composer plugin that checks for TYPO3 updates and provides detailed information about breaking changes and security updates",
    "type": "composer-plugin",
    "license": "GPL-2.0+",
    "homepage": "https://github.com/plan2net/typo3-update-check",
    "keywords": [
        "typo3",
        "composer-plugin",
        "security",
        "updates"
    ],
    "authors": [
        {
            "name": "Wolfgang Klinger",
            "email": "wk@plan2.net"
        }
    ],
    "support": {
        "issues": "https://github.com/plan2net/typo3-update-check/issues",
        "source": "https://github.com/plan2net/typo3-update-check"
    },
    "require": {
        "php": ">=8.1",
        "composer-plugin-api": "^2.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Plan2net\\Typo3UpdateCheck\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plan2net\\Typo3UpdateCheck\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Plan2net\\Typo3UpdateCheck\\Plugin"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse",
        "cs-fix": "vendor/bin/php-cs-fixer fix"
    }
}
